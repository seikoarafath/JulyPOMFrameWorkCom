<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Para Bank Test automtion regression suite" verbose="3" thread-count="3" parallel="tests">

<listeners>
 <listener class-name="com.qa.para.listeners.ExtentReportListener"/>
<listener class-name="com.qa.para.listeners.TestAllureListener"/> 
</listeners>



	<test name="login page test">
		<parameter name ="browser" value ="chrome" />
		<classes>
			<class name="com.qa.para.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="home page test">
		<parameter name ="browser" value ="firefox" />
		<classes>
			<class name="com.qa.para.tests.HomePageTest" />
		</classes>
	</test>
	
	<test name="contacts page test">
		<parameter name ="browser" value ="chrome" />
		<classes>
			<class name="com.qa.para.tests.ContactsPageTest" />
		</classes>
	</test>


</suite>